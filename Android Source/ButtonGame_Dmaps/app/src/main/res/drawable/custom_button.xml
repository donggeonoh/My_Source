<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#99ccff"
                android:endColor="#77aaff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#77aaff" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#99ccff"
                android:startColor="#77aaff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#77aaff" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#99ccff"
                android:startColor="#77aaff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#77aaff" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>