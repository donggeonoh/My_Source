package dmaps.study.frame;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.Panel;import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;

public class Main {

	public static void main(String[] args) {
		JFrame jFrame = new JFrame("오동건");
		Button changeColorButton = new Button("색깔변경");
		
		jFrame.setLayout(new GridLayout(2, 1));
		
		Panel panel = new Panel();
		Label label = new Label();
		label.setText("ㅎㅇ요");
		panel.add(label);
		
		Panel btnPanel = new Panel();
		btnPanel.setLayout(new GridLayout(1, 3));
		btnPanel.add(changeColorButton);
		btnPanel.add(new Button());
		btnPanel.add(new Button());
	
		changeColorButton.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				System.out.println(e.getSource().toString());
			}
		});
		
		jFrame.add(panel);
		jFrame.add(btnPanel);
		
		jFrame.setSize(500, 500
				);
		jFrame.setVisible(true);
	}
}
